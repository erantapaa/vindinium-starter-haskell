name:                vindinium
version:             0.1.0.0
synopsis:            Haskell starter bot for vindinium.org
homepage:            https://github.com/Herzult/vindinium-starter-haskell
license:             MIT
license-file:        LICENSE
author:              Antoine HÃ©rault
maintainer:          antoine.herault@gmail.com
build-type:          Simple
cabal-version:       >=1.10

library
  default-language: Haskell2010
  hs-source-dirs:   src
  build-depends:    base >=4.6 && <4.7
                  , mtl
                  , transformers
                  , text
                  , random
                  , aeson
                  , HTTP
                  , http-types
                  , http-client
                  , optparse-applicative
                  , array
  exposed-modules:  Vindinium
                  , Vindinium.Api
                  , Vindinium.Play
                  , Vindinium.Types
                  , Util

executable vindinium
  default-language: Haskell2010
  main-is:          Main.hs
  hs-source-dirs:   src
  other-modules:    Vindinium
                    ,Bot
                    ,Util
  build-depends:    base >=4.6 && < 4.7
                  , array
                  , mtl
                  , transformers
                  , text
                  , random
                  , aeson
                  , HTTP
                  , http-types
                  , http-client
                  , optparse-applicative

executable foo
  default-language: Haskell2010
  main-is:          Foo.hs
  hs-source-dirs:   src
  other-modules:    Vindinium
  build-depends:    base >=4.6 && < 4.7
                  , array
                  , mtl
                  , transformers
                  , text
                  , random
                  , aeson
                  , HTTP
                  , http-types
                  , http-client
